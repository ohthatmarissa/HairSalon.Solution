@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
<h1>Clients</h1>
<br>

@if (@Model.Count == 0)
  {
    <h3>No Clients entered yet!</h3>
  }

<ul>
    @foreach (Client client in @Model)
    {
        <li><a href="/clients/@client.GetId()">@client.GetName()</a></li>
    }
</ul>
<br>
<br>

<p><a href="/">Back Home</a></p>
</div>
