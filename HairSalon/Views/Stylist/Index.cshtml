@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
<h1>Stylists</h1>
<br>

@if (@Model.Count == 0)
  {
    <h3>No Stylists entered yet!</h3>
  }

<ul>
    @foreach (Stylist stylist in @Model)
    {
        <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
    }
</ul>
<br>
<br>

<p><a href="/">Back Home</a></p>
</div>
